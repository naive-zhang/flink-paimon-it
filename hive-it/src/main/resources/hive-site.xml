<configuration>
    <!-- Metastore JDBC connection URL -->
    <property>
        <name>javax.jdo.option.ConnectionURL</name>
        <value>jdbc:h2:mem:metastore_db;DB_CLOSE_DELAY=-1</value>
    </property>

    <!-- Metastore JDBC driver -->
    <property>
        <name>javax.jdo.option.ConnectionDriverName</name>
        <value>org.h2.Driver</value>
    </property>

    <!-- Metastore database username -->
    <property>
        <name>javax.jdo.option.ConnectionUserName</name>
        <value>sa</value>
    </property>

    <!-- Metastore database password -->
    <property>
        <name>javax.jdo.option.ConnectionPassword</name>
        <value></value>
    </property>

    <!-- Metastore warehouse directory -->
    <property>
        <name>hive.metastore.warehouse.dir</name>
        <value>./warehouse</value>
    </property>

    <!-- Disable schema verification -->
    <property>
        <name>hive.metastore.schema.verification</name>
        <value>false</value>
    </property>

    <!-- Enable automatic schema upgrade -->
    <property>
        <name>hive.metastore.schema.auto.upgrade</name>
        <value>true</value>
    </property>

    <!-- DataNucleus properties -->
    <property>
        <name>datanucleus.autoCreateSchema</name>
        <value>true</value>
    </property>
    <property>
        <name>datanucleus.fixedDatastore</name>
        <value>false</value>
    </property>
    <property>
        <name>datanucleus.validateTables</name>
        <value>false</value>
    </property>
    <property>
        <name>datanucleus.validateColumns</name>
        <value>false</value>
    </property>
    <property>
        <name>datanucleus.connectionPoolingType</name>
        <value>none</value>
    </property>
</configuration>
